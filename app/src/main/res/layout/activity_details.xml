<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".details">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageH"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_login" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Name:"
                            android:textColor="#000"
                            android:textSize="21sp" />

                        <TextView

                            android:id="@+id/NameH"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_weight="11"
                            android:padding="5dp"
                            android:text="Yash Agarwal"
                            android:textColor="#000"
                            android:textSize="21sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"

                            android:text="Address:"
                            android:textColor="#000"
                            android:textSize="21sp" />

                        <TextView

                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="11"
                            android:padding="5dp"
                            android:text="32/2 mohannagar road, Shankar shah society,Dhankwadi"
                            android:textColor="#000"
                            android:textSize="21sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Distance From Pict: "
                            android:textColor="#000"
                            android:textSize="21sp" />

                        <TextView

                            android:id="@+id/dist"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="600m"
                            android:textColor="#000"
                            android:textSize="21sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="5dp"
                            android:text="Rent(monthly) Per person: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/rp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:padding="5dp"
                            android:text="Yash Agarwal"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Rent Total: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/rt"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Yash Agarwal"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Hostel For: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/hf"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Yash Agarwal"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Bedrooms: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/bed"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Yash Agarwal"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Bathrooms: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/nb"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Yash Agarwal"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Number of people: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/np"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="1 tp 6 people"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Type: "
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>

                        <TextView

                            android:id="@+id/type"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Paying Guest"
                            android:textColor="#000"
                            android:textSize="21sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/selector_xml_btn_yellow"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Phone:"></Button>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/LOCATION"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/selector_xml_btn_yellow"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Find this address:"></Button>
                    </LinearLayout>


                    <!--            <LinearLayout-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="match_parent"-->
                    <!--                android:layout_margin="8dp"-->
                    <!--                android:orientation="horizontal"-->
                    <!--                android:gravity="center"-->
                    <!--                >-->
                    <!--                <Imageview-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:id="@+id/img"-->
                    <!--                    android:padding="10dp"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_gravity="center"-->
                    <!--                    android:gravity="center"-->

                    <!--                    ></Imageview></LinearLayout>-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>