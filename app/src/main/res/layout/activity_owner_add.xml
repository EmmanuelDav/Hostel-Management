<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:title="Add New Hostel"
            app:titleTextColor="#fff"
            android:background="@color/accent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:text="View Hostels"
            android:textColor="#fff"
            android:fontFamily="@font/righteous"
            android:padding="5dp"
            android:background="@color/accent"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HostelDetails">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:hint="Hostel Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/NameH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/righteous"
                        android:inputType="text"
                        android:textSize="21sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:hint="Hostel Address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <EditText
                        android:id="@+id/dist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:fontFamily="@font/gotham"
                        android:hint="Distance form School in Km"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:hint="Rent Per Person in Naira"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Rent Total: "
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/rt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of People * Rent Per Person"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Hostel For: "
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/hf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/HF"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Number of Bedrooms: "
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/bed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:entries="@array/BED"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Number of Bathrooms:"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/nb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:entries="@array/BATH"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Number of people: "
                        android:textColor="#000"
                        android:textSize="21sp" />

                    <Spinner
                        android:id="@+id/np"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/PEO"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Type: "
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/TY"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="Phone Number: "
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/phone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:fontFamily="@font/gotham"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/choose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/accent"
                        android:drawableEnd="@drawable/ic_baseline_image_24"
                        android:fontFamily="@font/gotham"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Choose Image of hostel" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addHostelOccupant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_baseline_people_24"
                        android:fontFamily="@font/gotham"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Add Occupant"
                        android:textColor="#fff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SelectedImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:padding="5dp"
                        android:text="No image selected"
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/LOcation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gotham"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/ic_baseline_location_on_24"
                        android:text="Record Hostel Location"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/SUBMIT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/accent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="publish hostels"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>